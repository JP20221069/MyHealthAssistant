<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupFragment">

    <ImageView
        android:id="@+id/loginbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bg_default"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tvwUsername"
        android:layout_width="101dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="296dp"
        android:text="Username"
        android:textAlignment="viewStart"
        android:textAppearance="@style/Theme.MyHealthAssistant.Label"
        android:textColor="@color/ha_white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvtbUsername"
        android:layout_width="258dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="288dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toEndOf="@+id/tvwUsername"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:boxBackgroundMode="none"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:singleLine="true"
                android:textColor="@color/sys_text"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp" />

        </com.google.android.material.textfield.TextInputLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvwEmail"
        android:layout_width="101dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="360dp"
        android:text="E-mail"
        android:textAlignment="viewStart"
        android:textAppearance="@style/Theme.MyHealthAssistant.Label"
        android:textColor="@color/ha_white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvtbEmail"
        android:layout_width="258dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="352dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toEndOf="@+id/tvwEmail"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:boxBackgroundMode="none"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:singleLine="true"
                android:textColor="@color/sys_text"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp" />

        </com.google.android.material.textfield.TextInputLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvwPassword"
        android:layout_width="101dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="420dp"
        android:text="Password"
        android:textAlignment="viewStart"
        android:textAppearance="@style/Theme.MyHealthAssistant.Label"
        android:textColor="@color/ha_white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvtbPassword"
        android:layout_width="258dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="412dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toEndOf="@+id/tvwPassword"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:boxBackgroundMode="none"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:singleLine="true"
                android:textColor="@color/sys_text"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp" />

        </com.google.android.material.textfield.TextInputLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvwRepass"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="468dp"
        android:text="Repeat password"
        android:textAlignment="viewStart"
        android:textAppearance="@style/Theme.MyHealthAssistant.Label"
        android:textColor="@color/ha_white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvtbRepass"
        android:layout_width="258dp"
        android:layout_height="48dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="476dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toEndOf="@+id/tvwRepass"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:boxBackgroundMode="none"
            app:boxStrokeWidth="0dp"
            app:boxStrokeWidthFocused="0dp"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtRepass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/sys_text"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp" />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="115dp"
        android:layout_height="38dp"
        android:layout_marginStart="264dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/mm_button"
        android:text="Sign up"
        android:textAppearance="@style/Theme.MyHealthAssistant.Label"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvtbRepass" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="115dp"
        android:layout_height="38dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/mm_button"
        android:text="Cancel"
        android:textAppearance="@style/Theme.MyHealthAssistant.Label"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvtbRepass" />

    <ImageView
        android:id="@+id/ivw_applogo"
        android:layout_width="165dp"
        android:layout_height="135dp"
        android:layout_marginTop="54dp"
        android:src="@drawable/app_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvw_greeting"
        android:layout_width="359dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="My Health Assistant"
        android:textAlignment="center"
        android:textAppearance="@style/Theme.MyHealthAssistant.LogoTitle2"
        android:textColor="@color/ha_white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivw_applogo" />

    <TextView
        android:id="@+id/tw_title"
        android:layout_width="359dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        android:text="Welcome! Set up your My Health Assistant account."
        android:textAlignment="viewStart"
        android:textAppearance="@style/Theme.MyHealthAssistant.Label"
        android:textColor="@color/ha_white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivw_applogo" />

</androidx.constraintlayout.widget.ConstraintLayout>